<Window x:Class="BudgetApp.Views.AddExpenseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetApp.Views"
        mc:Ignorable="d"
        Title="AddExpenseDialog" Height="299" Width="439">
    <Grid Margin="0,0,0,-6">
        <Button x:Name="AddExpenseDialogButton" Content="Add" HorizontalAlignment="Left" Margin="13,229,0,0" VerticalAlignment="Top" Width="117" Height="25" Click="AddExpenseDialogButton_Click"/>
        <Button x:Name="CancelExpenseDialogButton" Content="Cancel" HorizontalAlignment="Left" Margin="281,229,0,0" VerticalAlignment="Top" Width="117" Height="25" Click="CancelExpenseDialogButton_Click"/>
        <Label Content="Add Expense" HorizontalAlignment="Center" Height="27" Margin="0,26,0,0" VerticalAlignment="Top" Width="90" />
        <Label Content="Enter Expense Name: " HorizontalAlignment="Left" Height="27" Margin="10,74,0,0" VerticalAlignment="Top" Width="131" />
        <Label Content="Enter Expense Amount: " HorizontalAlignment="Left" Height="27" Margin="13,115,0,0" VerticalAlignment="Top" Width="146" />
        <TextBox x:Name="ExpenseNameTextBox" HorizontalAlignment="Left" Height="27" Margin="246,74,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="152"/>
        <TextBox x:Name="ExpenseAmountTextBox" HorizontalAlignment="Left" Height="27" Margin="246,115,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="152"/>
        <Label Content="Choose Expense Type: " HorizontalAlignment="Left" Height="27" Margin="13,158,0,0" VerticalAlignment="Top" Width="146" />
        <ComboBox x:Name="ExpenseTypeComboBox" HorizontalAlignment="Left" Height="27" Margin="246,158,0,0" VerticalAlignment="Top" Width="152">
            <ComboBoxItem IsSelected="True" Content="Loan"/>
            <ComboBoxItem Content="Groceries"/>
            <ComboBoxItem Content="Fast Food"/>
            <ComboBoxItem Content="Insurance"/>
            <ComboBoxItem Content="Other"/>
        </ComboBox>
        <!-- Change this to a combo box -->

    </Grid>
</Window>
