<Window x:Class="BudgetApp.Views.AddContributorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetApp.Views"
        mc:Ignorable="d"
        Title="AddContributorDialog" Height="314" Width="439">
    <Grid Margin="0,0,0,-6">
        <Button x:Name="AddContributorDialogButton" Content="Add" HorizontalAlignment="Left" Margin="13,229,0,0" VerticalAlignment="Top" Width="117" Height="25" Click="AddContributorDialogButton_Click"/>
        <Button x:Name="CancelContributorDialogButton" Content="Cancel" HorizontalAlignment="Left" Margin="281,229,0,0" VerticalAlignment="Top" Width="117" Height="25" Click="CancelContributorDialogButton_Click"/>
        <Label Content="Add Contributor" HorizontalAlignment="Center" Height="27" Margin="0,27,0,0" VerticalAlignment="Top" Width="98" />
        <Label Content="Enter Name: " HorizontalAlignment="Left" Height="27" Margin="10,106,0,0" VerticalAlignment="Top" Width="98" />
        <Label Content="Enter Percentage of Contributions: " HorizontalAlignment="Left" Height="27" Margin="13,154,0,0" VerticalAlignment="Top" Width="210" />
        <TextBox x:Name="ContributorNameTextBox" HorizontalAlignment="Left" Height="27" Margin="246,106,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="152"/>
        <TextBox x:Name="ContributorPercentageContributionTextBox" HorizontalAlignment="Left" Height="27" Margin="246,154,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="152"/>

    </Grid>
</Window>
